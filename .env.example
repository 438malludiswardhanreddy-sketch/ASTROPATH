# ASTROPATH Environment Variables Template
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=true
PORT=5000

# Camera & Detection
CAMERA_SOURCE=0
CONF_THRESHOLD=0.5

# GPS Configuration
GPS_ENABLED=false
GPS_PORT=COM3

# Drone Configuration
DRONE_ENABLED=false
DRONE_STREAM_URL=rtsp://your-drone-ip:8554/video

# Paths (Optional overrides)
# EXISTING_IMAGES_PATH=C:/path/to/your/images
